<h1>Add a new Task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <%= f.submit 'Add Task', class: 'btn btn-success mt-3' %>
<% end %>
<%= link_to "Back to List", tasks_path %>
